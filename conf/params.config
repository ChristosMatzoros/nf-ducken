/*
========================================================================================
    Nextflow config file for user-input parameters
========================================================================================
    Defines input files and parameters required to run the workflow.

----------------------------------------------------------------------------------------
*/

params {
    // Required user-input parameters
    inp_id_file = "/path/to/accession/id/file.tsv"
    email_address = "first.last@ethz.ch"
    read_type = "paired"              // or "single"
    otu_ref_file = "/path/to/otu/ref" // use null if downloading default
    trained_classifier = "/path/to/trained/feature/classifier"

    // Optional user-input parameters
    outdir = "/path/to/output/directory"
    trunc_len = 0            // default
    trunc_q = 2              // default
    taxa_level = 5           // default, collapse to genus

    // Intermediates to skip processes through DADA2
    denoised_table = null
    denoised_seqs = null
}